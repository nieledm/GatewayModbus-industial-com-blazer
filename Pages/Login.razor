@layout EmptyLayout
@page "/login"

<div class="raizen-login-container">
    <!-- Seção do equipamento DL6000 -->
    <div class="equipment-section">
        <img src="images/dl6000-equipment.png" alt="Raízen" class="equipment-image" />
    </div>

    <!-- Seção do formulário -->
    <div class="form-section">
        <div class="login-card">
            <div class="login-header">
                <h2 class="title">Controle DL6000</h2>
                <p class="subtitle">Autenticação de Operador</p>
            </div>

            <EditForm Model="@loginModel" OnValidSubmit="HandleLogin">
                <DataAnnotationsValidator />

                <div class="input-group">
                    <div class="input-icon-wrapper">
                        <i class="fas fa-id-card"></i>
                        <input type="text" class="input-field" placeholder="ID do Operador" />
                    </div>
                </div>

                <div class="input-group">
                    <div class="input-icon-wrapper">
                        <i class="fas fa-fingerprint"></i>
                        <input type="password" class="input-field" placeholder="Senha de Acesso" />
                    </div>
                </div>

                <div class="button-group">
                    <button type="submit" class="login-button">
                        <span>INICIAR SESSÃO</span>
                        <i class="fas fa-arrow-right-to-bracket"></i>
                    </button>
                    
                    <button type="button" class="clear-button">
                        <i class="fas fa-eraser"></i>
                        <span>LIMPAR</span>
                    </button>
                </div>
            </EditForm>

            <div class="status-message">
                <i class="fas fa-circle-info"></i>
                <span>Verifique seu ID e senha para acesso</span>
            </div>
        </div>
    </div>
</div>