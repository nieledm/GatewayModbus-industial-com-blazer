@page "/"
@layout EmptyLayout

<div class="raizen-login-container">
    <!-- Seção do equipamento DL6000 -->
    <div class="equipment-section">
        <img src="images/dl6000-equipment.png" alt="Raízen" class="equipment-image" />
    </div>

    <!-- Seção do formulário -->
    <div class="form-section">
        <div class="login-card">
            <div class="login-header">
                <h2 class="title">Controle DL6000</h2>
                <p class="subtitle">Autenticação de Operador</p>
            </div>

            <EditForm Model="@loginModel" OnValidSubmit="HandleLogin">
                <DataAnnotationsValidator />
                <ValidationSummary />

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="error-message">
                        <i class="fas fa-exclamation-circle"></i>
                        <span>@errorMessage</span>
                    </div>
                }

                <div class="input-group">
                    <div class="input-icon-wrapper">
                        <i class="fas fa-id-card"></i>
                        <InputText @bind-Value="loginModel.Username" class="input-field" placeholder="ID do Operador" />
                    </div>
                    <ValidationMessage For="@(() => loginModel.Username)" />
                </div>

                <div class="input-group">
                    <div class="input-icon-wrapper">
                        <i class="fas fa-fingerprint"></i>
                        <InputText type="password" @bind-Value="loginModel.Password" class="input-field" placeholder="Senha de Acesso" />
                    </div>
                    <ValidationMessage For="@(() => loginModel.Password)" />
                </div>

                <div class="remember-me">
                    <label>
                        <InputCheckbox @bind-Value="loginModel.RememberMe" />
                        Lembrar minhas credenciais
                    </label>
                </div>

                <div class="button-group">
                    <button type="submit" class="login-button" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span>CARREGANDO...</span>
                            <i class="fas fa-spinner fa-spin"></i>
                        }
                        else
                        {
                            <span>INICIAR SESSÃO</span>
                            <i class="fas fa-arrow-right-to-bracket"></i>
                        }
                    </button>
                    
                    <button type="button" class="clear-button" @onclick="() => loginModel = new LoginModel()">
                        <i class="fas fa-eraser"></i>
                        <span>LIMPAR</span>
                    </button>
                </div>
            </EditForm>

            <div class="status-message">
                <i class="fas fa-circle-info"></i>
                <span>Verifique seu ID e senha para acesso</span>
            </div>
        </div>
    </div>
</div>